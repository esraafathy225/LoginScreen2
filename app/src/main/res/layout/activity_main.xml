<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.loginscreen2.MainActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:background="#8033F0">
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/paper"
          android:layout_centerInParent="true"
          android:id="@+id/img"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Webm@il"
          android:textColor="#fff"
          android:layout_below="@id/img"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:textSize="20sp"/>

  </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/avatar"
            android:hint="John Doe"
            android:drawablePadding="25dp"
            android:layout_marginTop="20dp"
            android:id="@+id/edit1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit1"
            android:id="@+id/edit2"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/padlock"
            android:hint="************"
            android:drawablePadding="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit2"
            android:text="Remember me "
            android:layout_marginTop="20dp"
            android:textColor="#8033F0"
            android:checked="true"
            android:backgroundTint="#8033F0"
            android:id="@+id/check"
            android:buttonTint="#8033F0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:layout_alignBottom="@+id/check"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="forgot password?"
            android:textColor="#8033F0" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:id="@+id/btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LOG IN"
            android:textColor="#fff"
            android:background="@drawable/roundedbutton"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@id/btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Don't have account?  "
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#c0c0c0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text"
            android:text="Sign Up"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#8033F0"
            />
    </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
